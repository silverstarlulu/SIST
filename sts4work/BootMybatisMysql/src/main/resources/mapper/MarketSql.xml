<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTDMapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="data.mapper.MarketMapperInter">

	<select id="getTotalCount" resultType="int">
		select count(*) from
		market
	</select>

	<insert id="insertMarket" parameterType="marketDto">
		insert into
		market(sang,dan,photoname,ipgo)
		values(#{sang},#{dan},#{photoname},now())
	</insert>

	<select id="getAllDatas" resultType="marketDto">
		select * from market order
		by num desc
	</select>

	<delete id="deleteMarket" parameterType="String">
		delete from market where
		num=#{num}
	</delete>

	<select id="getData" resultType="marketDto"
		parameterType="String">
		select * from market where num=#{num}
	</select>

	<update id="updateMarket" parameterType="String">
		update market set sang=#{sang},dan=#{dan}
		<if test="photoname!=null">,photoname=#{photoname}</if>
		 where num=#{num}
	</update>

</mapper>